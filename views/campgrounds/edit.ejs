<% layout('layouts/boilerplate') %>

<div class="row my-5">
  <div class="col-6 offset-3">
    <h1>Edit Campground</h1>
    <form
      action="/campgrounds/<%= campground.id %>?_method=PUT"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3">
        <label for="title" class="lable">Title</label>
        <input
          value="<%= campground.title %> "
          type="text"
          class="form-control"
          id="title"
          name="campground[title]"
          required
        />
      </div>
      <div class="mb-3">
        <label class="lable" for="location">Location</label>
        <input
          value="<%= campground.location %> "
          type="text"
          class="form-control"
          name="campground[location]"
          id="location"
          required
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="price">Campground Price</label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input
            type="number"
            id="price"
            name="campground[price]"
            class="form-control"
            aria-describedby="price-label"
            value="<%= campground.price %>"
            required
          />
        </div>
      </div>
      <div class="mb-3">
        <label for="description" class="lable">Description</label>
        <textarea
          class="form-control"
          name="campground[description]"
          id="description"
          cols="30"
          rows="10"
          required
        >
<%= campground.description %> </textarea
        >
      </div>
      <div class="mb-3">
        <label for="image">Add images : </label>
        <input type="file" name="image" id="image" />
      </div>
      <button class="btn btn-outline-success">Save</button>
      <a
        class="btn btn-outline-danger"
        href="/campgrounds/<%= campground.id %> "
        >Cancel</a
      >
    </form>
    <div class="mt-3"></div>
  </div>
</div>
